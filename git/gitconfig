[diff]
	tool = nvimdiff
[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
	prompt = false
[merge]
	tool = nvimdiff
	conflictstyle = diff3
[mergetool "nvim"]
  cmd = "nvim -f -c \"Gdiffsplit!\" \"$MERGED\""
  prompt = false
[alias]
	dt = difftool
	mt = mergetool
